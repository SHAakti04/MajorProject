<% layout("/layouts/boilerplate.ejs") %>
<body>

    <div class="row mt-3">
        <div class="col-md-8 offset-2">
            <h3>Edit Here</h3>
    <form method="post" action="/listing/<%=listing._id%>?_method=put" novalidate class="needs-validation" enctype="multipart/form-data">
        <!-- here we are using listing[] because it is easy way to extract all the parameter in post page -->
        <!-- Using listing[] because it's an easy way to extract all the parameters in the post request -->
        <div class="mb-3">
            <!-- mb=margin bottom -->
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" value="<%= listing.title %>" type="text" class="form-control" required>
            <div class="valid-feedback">Good</div>
        </div>
        
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" class="form-control" required><%= listing.description %></textarea>
            <div class="invalid-feedback">Enter Valid description</div>
        </div>
        <div>
            <p>preview original image</p>
             <img src="<%=originalImageUrl %>">
        </div>
        <div class="mb-3">
            <label for="image" class="form-label" req>Upload image</label>
            <input name="listing[image]"  type="file" class="form-control" >
        </div>
        <!-- We want price and country on the same line -->
        <div class="row">
            <!-- After medium breakpoint, it will occupy the space as a ratio of 4:8 -->
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input name="listing[price]" value="<%= listing.price %>" type="text" class="form-control" required>
                <div class="invalid-feedback">Enter Valid Price</div>
            </div>
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input name="listing[country]" value="<%=listing.country %>" type="text" class="form-control" required>
                <div class="invalid-feedback">Enter Valid Country</div>
            </div>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input name="listing[location]" value="<%=listing.location %>" type="text" class="form-control" required>
            <div class="invalid-feedback">Enter Valid Location</div>
        </div>
        <br><br>
        <button class="btn btn-dark edit-btn">Update</button>
        <br><br>  
    </form>
</div>
</div>
</body>
